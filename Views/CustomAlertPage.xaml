<!-- CustomAlertPage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFamily.CustomAlertPage"  
             BackgroundColor="#80000000" >
    <!-- Átlátszó háttérszín -->

    <Frame BackgroundColor="White"
           CornerRadius="10"
           Padding="20"
           HorizontalOptions="Center"
           VerticalOptions="Center">
        <StackLayout>
            <Label x:Name="lblTitle"
                Text="Egyedi Figyelmeztetés"
                   FontSize="24"
                   TextColor="DarkRed"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
            <Label x:Name="lblText"
                Text="Ez egy egyedi üzenet"
                   FontSize="18"
                   TextColor="Black"
                   HorizontalOptions="Center" 
                   Margin="0,20,0,20"/>
            <Button Text="OK"
                    Clicked="OnOkButtonClicked"
                    BackgroundColor="DarkRed"
                    TextColor="White"
                    FontAttributes="Bold"/>
        </StackLayout>
    </Frame>
</ContentPage>
